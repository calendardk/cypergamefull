<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cybergame.ui.fxcontroller.SessionMonitorController"
            prefHeight="700"
            prefWidth="1000"
            style="-fx-background-color: -primary-color;">

    <stylesheets>
        <URL value="@../../css/base.css"/>
        <URL value="@../../css/admin.css"/>
    </stylesheets>

    <top>
        <VBox spacing="10" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="QUẢN LÝ PHIÊN CHƠI"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox spacing="0" style="-fx-background-radius: 5; -fx-border-color: #334155; -fx-border-radius: 5;">
                    <ToggleButton text="Đang Hoạt Động" selected="true" style="-fx-background-color: -secondary-color; -fx-text-fill: -success-color; -fx-background-radius: 5 0 0 5;"/>
                    <ToggleButton text="Lịch Sử / Đã Đóng" style="-fx-background-color: -secondary-color; -fx-text-fill: -text-muted; -fx-background-radius: 0 5 5 0;"/>
                </HBox>
                <TextField promptText="Tìm máy hoặc tên khách..." style="-fx-pref-width: 200; -fx-background-color: -secondary-color; -fx-text-fill: white;"/>
            </HBox>
            <Separator style="-fx-background-color: #334155;"/>
        </VBox>
    </top>

    <center>
        <VBox style="-fx-padding: 0 20 20 20;">
            <TableView fx:id="sessionTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colPc" text="Máy Trạm" prefWidth="100"
                                 style="-fx-alignment: CENTER; -fx-font-weight: bold; -fx-text-fill: -accent-color;"/>

                    <TableColumn fx:id="colAccount" text="Tài khoản Khách" prefWidth="150"
                                 style="-fx-alignment: CENTER_LEFT;"/>

                    <TableColumn fx:id="colStart" text="Bắt đầu lúc" prefWidth="120"
                                 style="-fx-alignment: CENTER;"/>

                    <TableColumn fx:id="colDuration" text="Thời gian" prefWidth="120"
                                 style="-fx-alignment: CENTER; -fx-font-weight: bold;"/>

                    <TableColumn fx:id="colTotal" text="Tiền dịch vụ + Máy" prefWidth="170"
                                 style="-fx-alignment: CENTER-RIGHT; -fx-text-fill: -success-color; -fx-font-weight: bold;"/>

                    <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="120"
                                 style="-fx-alignment: CENTER;"/>
                    
                    <TableColumn fx:id="colAction" text="Hành động" prefWidth="120" style="-fx-alignment: CENTER;"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" style="-fx-padding: 10 20; -fx-background-color: -secondary-color; -fx-border-color: #334155; -fx-border-width: 1 0 0 0;">
            <Label text="Số máy đang hoạt động:" style="-fx-text-fill: -text-muted;"/>
            <Label fx:id="lblTotalSession" text="0" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            
            </HBox>
    </bottom>

</BorderPane>