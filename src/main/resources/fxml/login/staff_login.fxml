<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.cybergame.ui.fxcontroller.LoginController"
           prefWidth="800" prefHeight="600">
    
    <stylesheets>
        <URL value="@../../css/base.css" />
        <URL value="@../../css/login.css" />
    </stylesheets>

    <VBox alignment="CENTER" spacing="20" maxWidth="400" maxHeight="450" styleClass="login-card">
        <Text text="HỆ THỐNG QUẢN LÝ CYBER" style="-fx-font-size: 24px; -fx-fill: -text-color; -fx-font-weight: bold;"/>
        
        <TabPane fx:id="loginTabs" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Nhân Viên">
                <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                    <TextField fx:id="txtStaffUser" promptText="Tài khoản nhân viên" style="-fx-pref-height: 40;"/>
                    <PasswordField fx:id="txtStaffPass" promptText="Mật khẩu" style="-fx-pref-height: 40;"/>
                    <Button text="ĐĂNG NHẬP" maxWidth="Infinity" style="-fx-pref-height: 40;" onAction="#handleStaffLogin"/>
                </VBox>
            </Tab>

            <Tab text="Quản Trị Viên">
                <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                    <Label text="Nhập mã PIN xác thực" style="-fx-text-fill: -text-color;"/>
                    <PasswordField fx:id="txtAdminPin" promptText="****" alignment="CENTER" 
                                   style="-fx-pref-height: 50; -fx-font-size: 18px; -fx-max-width: 200;"/>
                    <Button text="XÁC THỰC ADMIN" maxWidth="Infinity" style="-fx-pref-height: 40; -fx-background-color: -danger-color;" onAction="#handleAdminLogin"/>
                </VBox>
            </Tab>
        </TabPane>
    </VBox>
</StackPane>